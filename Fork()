# fork_example.py
# executar com: python3 fork_example.py

import os

pid = os.fork()

if pid == 0:
    # Este bloco é executado **somente pelo processo filho**
    print("Sou o filho (pid=0 no fork).")
else:
    # Este bloco é executado **somente pelo processo pai**
    print("Sou o pai, criei o filho com PID:", pid)

nano fork_example.py #abre o editor de texto nano

#dentro do editor nano usamos esse código salvando e saindo com Ctrl+o e Ctrl+x
import os

pid = os.fork()

if pid == 0:
    print("Sou o filho (pid=0 no fork).")
else:
    print("Sou o pai, criei o filho com PID:", pid)

#Após sair do editor, rodamos o seguinte código
python3 fork_example.py
